{
  "compilerOptions": {
    "target": "ES2020",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["node"],

    "forceConsistentCasingInFileNames": true
  }
}
